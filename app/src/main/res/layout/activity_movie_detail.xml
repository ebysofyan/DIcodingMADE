<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:background="@color/bgColor">

    <FrameLayout
            android:id="@+id/movie_detail_header_container"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent">
        <ImageView
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/movie_detail_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/movie_image_content_desc"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/poster_preman"
                app:layout_collapseMode="parallax"
                android:transitionName="image_poster"
        />

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:titleTextAppearance="@style/ToolbarTitleText"
                app:layout_collapseMode="pin"
        />
    </FrameLayout>


    <ImageView
            android:id="@+id/movie_detail_poster"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/poster_preman"
            android:contentDescription="@string/movie_image_content_desc"
            app:layout_constraintTop_toBottomOf="@+id/movie_detail_header_container"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:transitionName="image_poster"
            app:layout_constraintBottom_toBottomOf="@+id/movie_detail_header_container"/>


    <TextView
            android:id="@+id/movie_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/movie_detail_header_container"
            app:layout_constraintStart_toEndOf="@id/movie_detail_poster"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:id="@+id/movie_detail_rating_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_star_active"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/movie_image_content_desc"
            app:layout_constraintTop_toBottomOf="@+id/movie_detail_title"
            app:layout_constraintStart_toEndOf="@id/movie_detail_poster"/>

    <TextView
            android:id="@+id/movie_detail_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/movie_detail_title"
            app:layout_constraintStart_toEndOf="@id/movie_detail_rating_image"
            app:layout_constraintEnd_toEndOf="parent"
    />


    <TextView
            android:id="@+id/movie_detail_release_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/movie_detail_rating"
            app:layout_constraintStart_toEndOf="@id/movie_detail_poster"
            app:layout_constraintEnd_toEndOf="parent"
    />


    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/movie_detail_release_date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
                android:id="@+id/movie_detail_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"/>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>