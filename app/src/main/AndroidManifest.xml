<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="ebysofyan.app.made.submission">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SET_ALARM"/>

    <permission
            android:name="ebysofyan.app.made.submission.services.provider.READ_DATABASE"
            android:protectionLevel="normal"/>
    <permission
            android:name="ebysofyan.app.made.submission.services.provider.WRITE_DATABASE"
            android:protectionLevel="normal"/>

    <application
            android:name=".App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="false"
            tools:ignore="GoogleAppIndexingWarning">


        <receiver android:name=".widget.FavoriteStackWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/favorite_widget_info"/>
        </receiver>

        <activity android:name=".views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".views.detail.MovieDetailActivity"/>
        <activity android:name=".views.search.MovieSearchActivity"/>

        <activity
                android:name=".views.settings.SettingsActivity"/>

        <receiver android:name=".widget.FavoriteStackWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/favorite_widget_info"/>
        </receiver>

        <receiver
                android:name=".services.receiver.ReleaseTodayAlarmReceiver"
                android:enabled="true"
                android:exported="true"/>

        <receiver
                android:name=".services.receiver.ReleaseTodayAlarmReceiver"
                android:enabled="true"
                android:exported="true"/>

        <service
                android:name=".widget.FavoriteStackWidgetService"
                android:permission="android.permission.BIND_REMOTEVIEWS"/>

        <provider
                android:name="ebysofyan.app.made.submission.services.provider.FavoriteContentProvider"
                android:authorities="ebysofyan.app.made.submission.services.provider"
                android:exported="true"
                android:grantUriPermissions="true"
                android:readPermission="ebysofyan.app.made.submission.provider.READ_DATABASE"
                android:writePermission="ebysofyan.app.made.submission.provider.WRITE_DATABASE"/>
    </application>

</manifest>